{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "TACS COVID G2",
    "description": "The application allows following the progression of the COVID-19 pandemic using different tools. You can find out more about in the [GitHub's repository](https://github.com/loopmeagain/TACS-COVID-G2)."
  },
  "schemes": [
    "http",
    "https"
  ],
  "host": "localhost:8080",
  "paths": {
    "/health": {
      "get": {
        "summary": "Check API status",
        "description": "If the API is active, it returns the seconds that it has been in that state.",
        "responses": {
          "200": {
            "description": "The API is up.",
            "schema": {
              "properties": {
                "uptime": {
                  "type": "number"
                }
              }
            }
          },
          "500": {
            "$ref": "#/responses/Standard500Response"
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": [
          "users"
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/Standard200Response"
          },
          "500": {
            "$ref": "#/responses/Standard500Response"
          }
        }
      }
    },
    "/logout": {
      "post": {
        "tags": [
          "users"
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/Standard200Response"
          },
          "500": {
            "$ref": "#/responses/Standard500Response"
          }
        }
      }
    },
    "/users": {
      "post": {
        "tags": [
          "users"
        ],
        "summary": "Creates a user",
        "description": "Adds a new user to the users list.",
        "parameters": [
          {
            "$ref": "#/parameters/user"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/Standard200Response"
          },
          "400": {
            "$ref": "#/responses/Standard400Response"
          },
          "500": {
            "$ref": "#/responses/Standard500Response"
          }
        }
      },
      "put": {
        "tags": [
          "users"
        ],
        "summary": "Modifies a user",
        "description": "Updates data of an existent user.",
        "parameters": [
          {
            "$ref": "#/parameters/user"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/Standard200Response"
          },
          "400": {
            "$ref": "#/responses/Standard400Response"
          },
          "500": {
            "$ref": "#/responses/Standard500Response"
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "tags": [
          "users"
        ],
        "summary": "Gets a user",
        "description": "Returns a single user for its id",
        "parameters": [
          {
            "$ref": "#/parameters/numericId"
          }
        ],
        "responses": {
          "200": {
            "description": "A User",
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          "404": {
            "$ref": "#/responses/Standard404Response"
          },
          "500": {
            "$ref": "#/responses/Standard500Response"
          }
        }
      }
    },
    "/countries": {
      "get": {
        "tags": [
          "countries"
        ],
        "summary": "Gets some countries",
        "description": "Returns a list containing all countries",
        "parameters": [
          {
            "$ref": "#/parameters/pageSize"
          },
          {
            "$ref": "#/parameters/pageLimit"
          }
        ],
        "responses": {
          "200": {
            "description": "A list of Country",
            "schema": {
              "type": "object",
              "allOf": [
                {
                  "properties": {
                    "data": {
                      "$ref": "#/definitions/Countries"
                    }
                  }
                },
                {
                  "$ref": "#/definitions/Pagination"
                }
              ]
            }
          },
          "500": {
            "$ref": "#/responses/Standard500Response"
          }
        }
      }
    },
    "/countries/{id}": {
      "get": {
        "tags": [
          "countries"
        ],
        "summary": "Gets a country",
        "description": "Returns a single country for its id",
        "parameters": [
          {
            "$ref": "#/parameters/numericId"
          }
        ],
        "responses": {
          "200": {
            "description": "A Country",
            "schema": {
              "$ref": "#/definitions/Country"
            }
          },
          "404": {
            "$ref": "#/responses/Standard404Response"
          },
          "500": {
            "$ref": "#/responses/Standard500Response"
          }
        }
      }
    },
    "/lists": {
      "get": {
        "tags": [
          "lists"
        ],
        "summary": "Gets some lists",
        "description": "Returns a list containing all lists",
        "parameters": [
          {
            "$ref": "#/parameters/from"
          },
          {
            "$ref": "#/parameters/pageSize"
          },
          {
            "$ref": "#/parameters/pageLimit"
          }
        ],
        "responses": {
          "200": {
            "description": "A list of Lists",
            "schema": {
              "type": "object",
              "allOf": [
                {
                  "properties": {
                    "data": {
                      "$ref": "#/definitions/Lists"
                    }
                  }
                },
                {
                  "$ref": "#/definitions/Pagination"
                }
              ]
            }
          },
          "404": {
            "$ref": "#/responses/Standard404Response"
          },
          "500": {
            "$ref": "#/responses/Standard500Response"
          }
        }
      },
      "post": {
        "tags": [
          "lists"
        ],
        "summary": "Creates a list",
        "description": "Adds a new list to the lists list.",
        "parameters": [
          {
            "$ref": "#/parameters/list"
          }
        ],
        "responses": {
          "201": {
            "$ref": "#/responses/Standard201Response"
          },
          "400": {
            "$ref": "#/responses/Standard400Response"
          },
          "500": {
            "$ref": "#/responses/Standard500Response"
          }
        }
      },
      "put": {
        "tags": [
          "lists"
        ],
        "summary": "Modifies a list",
        "description": "Updates data of an existent list.",
        "parameters": [
          {
            "$ref": "#/parameters/list"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/Standard200Response"
          },
          "400": {
            "$ref": "#/responses/Standard400Response"
          },
          "500": {
            "$ref": "#/responses/Standard500Response"
          }
        }
      }
    },
    "/lists/{id}": {
      "get": {
        "tags": [
          "lists"
        ],
        "summary": "Gets a list",
        "description": "Returns a single list for its id",
        "parameters": [
          {
            "$ref": "#/parameters/numericId"
          }
        ],
        "responses": {
          "200": {
            "description": "A List",
            "schema": {
              "$ref": "#/definitions/List"
            }
          },
          "404": {
            "$ref": "#/responses/Standard404Response"
          },
          "500": {
            "$ref": "#/responses/Standard500Response"
          }
        }
      },
      "delete": {
        "tags": [
          "lists"
        ],
        "summary": "Delete a list",
        "description": "Delete a single list for its id",
        "parameters": [
          {
            "$ref": "#/parameters/numericId"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/responses/Standard200Response"
          },
          "404": {
            "$ref": "#/responses/Standard404Response"
          },
          "500": {
            "$ref": "#/responses/Standard500Response"
          }
        }
      }
    },
    "/lists/{id}/latest": {
      "get": {
        "tags": [
          "lists"
        ],
        "summary": "Gets a list with the latest result for each Country",
        "description": "Returns a single list for its id",
        "parameters": [
          {
            "$ref": "#/parameters/numericId"
          }
        ],
        "responses": {
          "200": {
            "description": "A List",
            "schema": {
              "$ref": "#/definitions/List"
            }
          },
          "404": {
            "$ref": "#/responses/Standard404Response"
          },
          "500": {
            "$ref": "#/responses/Standard500Response"
          }
        }
      }
    },
    "/lists/{id}/history": {
      "get": {
        "tags": [
          "lists"
        ],
        "summary": "Gets a list with the comparition of the results for each Country",
        "description": "Returns a single list for its id",
        "parameters": [
          {
            "$ref": "#/parameters/numericId"
          }
        ],
        "responses": {
          "200": {
            "description": "A List",
            "schema": {
              "$ref": "#/definitions/List"
            }
          },
          "404": {
            "$ref": "#/responses/Standard404Response"
          },
          "500": {
            "$ref": "#/responses/Standard500Response"
          }
        }
      }
    }
  },
  "definitions": {
    "Covid": {
      "properties": {
        "confirmed": {
          "type": "integer"
        },
        "deaths": {
          "type": "integer"
        },
        "recovered": {
          "type": "integer"
        }
      }
    },
    "Latest": {
      "properties": {
        "lastUpdate": {
          "type": "datetime"
        },
        "confirmed": {
          "type": "integer"
        },
        "deaths": {
          "type": "integer"
        },
        "recovered": {
          "type": "integer"
        }
      }
    },
    "TimeSeries": {
      "properties": {
        "M/d/yyyy": {
          "$ref": "#/definitions/Result"
        }
      }
    },
    "CountryDataValue": {
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "iso2": {
          "type": "string"
        },
        "iso3": {
          "type": "string"
        },
        "latitude": {
          "type": "string"
        },
        "longitude": {
          "type": "string"
        },
        "results": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Result"
          }
        }
      }
    },
    "Country": {
      "properties": {
        "dataValues": {
          "$ref": "#/definitions/CountryDataValue"
        },
        "latest": {
          "$ref": "#/definitions/Latest"
        },
        "timeseries": {
          "$ref": "#/definitions/Latest"
        }
      }
    },
    "Countries": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Country"
      }
    },
    "ListDataValue": {
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "registerAt": {
          "type": "datetime"
        },
        "iso3": {
          "type": "string"
        },
        "latitude": {
          "type": "string"
        },
        "longitude": {
          "type": "string"
        },
        "countries": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Country"
          }
        }
      }
    },
    "List": {
      "properties": {
        "dataValues": {
          "$ref": "#/definitions/ListDataValue"
        },
        "latest": {
          "$ref": "#/definitions/Latest"
        }
      }
    },
    "Lists": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/List"
      }
    },
    "User": {
      "properties": {
        "id": {
          "type": "integer",
          "readOnly": true
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "last_name": {
          "type": "string"
        }
      }
    },
    "Users": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/User"
      }
    },
    "Pagination": {
      "properties": {
        "total_pages": {
          "type": "integer"
        },
        "total_count": {
          "type": "integer"
        },
        "page": {
          "type": "integer"
        },
        "limit": {
          "type": "integer"
        }
      }
    },
    "Error": {
      "properties": {
        "code": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    }
  },
  "responses": {
    "Standard200Response": {
      "description": "Operation executed successfully."
    },
    "Standard201Response": {
      "description": "The request has been fulfilled and has resulted in one or more new resources being created."
    },
    "Standard400Response": {
      "description": "Bad request.",
      "schema": {
        "$ref": "#/definitions/Error"
      }
    },
    "Standard404Response": {
      "description": "Resource not found.",
      "schema": {
        "$ref": "#/definitions/Error"
      }
    },
    "Standard500Response": {
      "description": "An unexpected error occured.",
      "schema": {
        "$ref": "#/definitions/Error"
      }
    }
  },
  "parameters": {
    "pageSize": {
      "name": "page",
      "in": "query",
      "description": "Page number",
      "type": "integer"
    },
    "pageLimit": {
      "name": "limit",
      "in": "query",
      "description": "Number of items returned by page",
      "type": "integer"
    },
    "user": {
      "name": "user",
      "in": "body",
      "description": "User object.",
      "schema": {
        "$ref": "#/definitions/User"
      }
    },
    "list": {
      "name": "list",
      "in": "body",
      "description": "List object.",
      "schema": {
        "$ref": "#/definitions/List"
      }
    },
    "numericId": {
      "name": "id",
      "in": "path",
      "required": true,
      "description": "The identifier of the resourse to found",
      "type": "integer"
    }
  }
}